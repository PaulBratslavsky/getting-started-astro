---
import MainLayout from "../Layououts/MainLayout.astro"
const title = "About";
console.log(title);
---

<MainLayout title={title}>
  <section class="absolute inset-0 z-0">
    <div class="container mx-auto h-screen px-4 flex justify-center items-center">
      <div class="mb-6 w-full lg:w-3/4 px-4">
        <div class="flex flex-wrap items-center bg-white rounded shadow overflow-hidden">
          <img class="w-full lg:w-1/3 h-80 object-cover" src="https://images.unsplash.com/photo-1580852300654-03c803a14e24?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" alt="">
          <div class="w-full lg:w-2/3 lg:pl-6 p-4">
            <h4 class="mb-2 text-2xl font-bold font-heading">Danny Bailey</h4>
            <p class="mb-4 text-gray-500 leading-loose">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vitae felis at ante bibendum mollis et et mauris.</p>
            <div class="flex">
              <a class="mr-3" href="#">
                <img src="social/twitter.svg" alt="">
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
